{
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": true,
  "packageRules": [
    {
        // docker digest updates only weekly to reduce churn
        matchDatasources: ['docker'],
        matchUpdateTypes: [
          'digest'
        ],
        extends: [
          'schedule:weekly'
        ]
    }
  ]
}
